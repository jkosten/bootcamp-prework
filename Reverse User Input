 using System;

namespace PracticeProgramming1
{
    class Program
    {
        static void Main(string[] args)
        {
            int num, reverse = 0;

            Console.WriteLine("Please Enter a Number"); //the program will begin by asking the user to input a number//

            num = int.Parse(Console.ReadLine());

            while(num !=0) //if the number "0" is entered the following math will not work//
            {
                reverse = reverse * 10;

                reverse = reverse + num % 10;

                num = num / 10;
            }

            Console.WriteLine("The Reverse of the Number You Entered is : " + reverse); //the user's number is returned to them with the digits in reverse order//

            Console.ReadLine();

        }
    }
}
